@font-face
	font-family PT Sans
	src url("../_fonts/PT-Sans-regular.woff2") format ("woff2")

//====================
// mixins
// ===================
font($size,$family,$weight,$color)
	font-size $size
	font-family $family
	font-weight $weight
	color: $color
//====================
// variables
// ===================
$blue = #1da7ff
$purple = #5a4496
$gray = #5e5e5e

//====================
// global
// ===================
body
	padding 0
	margin 0
	background url('../_img/cork-wallet.png')
*
	box-sizing: border-box

a
	text-decoration: none

ul
ol
	list-style none